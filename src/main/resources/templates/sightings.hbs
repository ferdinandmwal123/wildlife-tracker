{{#partial "content"}}
    <div class="row">
        <div class="card-group">

              {{#if sightings}}
                  {{#each sightings }}
                    <div class="">
                  <div class="card">
                      <img src="/images/animal.gif" class="card-img-top" alt="...">
                      <div class="card-body">
                          <h5 class="card-title">Spotted by: {{ranger_name}}</h5>
                          <p class="card-text">Spotted at: {{location}}</p>
                          <p class="card-text">Name: {{animal_name}} </p>
                          <p class="card-text"><small class="text-muted">Last updated a min ago</small></p>
                      </div>
                  </div>
                  </div>
                  {{/each}}
              {{/if}}
        </div>
    </div>
    </div>
{{/partial}}
{{>layout.hbs}}